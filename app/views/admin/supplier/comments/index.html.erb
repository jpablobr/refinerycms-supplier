<%= render :partial => '/admin/supplier/submenu' %>
<div id='records'>
  <% if searching? %>
    <h2><%= t('results_for', :scope => 'shared.admin.search', :query => params[:search]) %></h2>
    <% if @supplier_comments.any? %>
      <%=# will_paginate @supplier_comments
      %>

      <ul>
        <%= render :partial => "supplier_comments",
                   :collection => @supplier_comments %>
      </ul>

      <%=# will_paginate @supplier_comments
      %>
    <% else %>
      <p><%= t('search_no_results', :scope => 'admin') %></p>
    <% end %>
  <% else %>
    <% if @supplier_comments.any? %>
      <%=# will_paginate @supplier_comments
      %>

      <%= render :partial => "sortable_list" %>

      <%=# will_paginate @supplier_comments
      %>
    <% else %>
      <h3>
        <%= t('.no_items_yet',
              :type => t(action_name.gsub('index', 'new'), :scope => 'admin.supplier.submenu.comments').downcase) %>
      </h3>
    <% end %>
  <% end %>
</div>
