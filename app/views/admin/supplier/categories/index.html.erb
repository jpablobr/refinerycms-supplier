<%= render :partial => '/admin/supplier/submenu' %>
<div id='records'>
  <% if searching? %>
    <h2><%= t('results_for', :scope => 'shared.admin.search', :query => params[:search]) %></h2>
    <% if @supplier_categories.any? %>
      <%= render :partial => "supplier_categories",
                 :collection => @supplier_categories %>
    <% else %>
      <p><%= t('search_no_results', :scope => 'admin') %></p>
    <% end %>
  <% else %>
    <% if @supplier_categories.any? %>
      <%= will_paginate @supplier_categories %>

      <%= render :partial => "sortable_list" %>

      <%= will_paginate @supplier_categories %>
    <% else %>
      <p>
        <strong>
          <%= t('.no_items_yet', :create => t('new', :scope => 'admin.supplier.submenu.categories')) %>
        </strong>
      </p>
    <% end %>
  <% end %>
</div>
