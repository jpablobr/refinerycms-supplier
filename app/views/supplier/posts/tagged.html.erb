<% content_for :body_content_title, "#{t('.posts_tagged')} &#8220;#{@tag_name.titleize}&#8221;".html_safe -%>

<% content_for :body_content_left do %>
  <% if @supplier_posts.any? %>
    <section id="supplier_posts">
      <%= render :partial => "/supplier/shared/post", :collection => @supplier_posts %>
      <%= will_paginate @supplier_posts %>
    </section>
  <% else %>
    <p><%= t('.no_supplier_articles_yet') %></p>
  <% end %>
<% end %>

<% content_for :body_content_right do %>
  <%= render :partial => "/supplier/shared/categories" %>
  <%= render :partial => "/supplier/shared/tags" %>
  <%= render :partial => "/supplier/shared/rss_feed" %>
  <%= render :partial => "/supplier/shared/archive_list" %>
<% end %>

<%= render :partial => "/shared/content_page" %>
<% content_for :stylesheets, stylesheet_link_tag('refinerycms-supplier') %>
